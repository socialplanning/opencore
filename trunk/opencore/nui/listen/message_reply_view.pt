<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en" i18n:domain="plone"
      metal:use-macro="here/@@standard_macros/master" tal:define="ml view/getMailingList">
  <head>
    <title metal:fill-slot="title" tal:content="string:${view/context/Title} - ${view/area/Title}" />
  </head>
  <body>
    <div metal:fill-slot="content">
      <div metal:use-macro="here/@@listen_macros/bcrumb"/>
      <div metal:use-macro="here/@@listen_macros/tabs"/>
      <div id="oc-content-main" i18n:domain="listen" tal:define="errors view/errors|nothing">
        <div class="oc-headingBlock">
          <h2 i18n:translate="message_reply">
            New reply to
            <span>
              <a href="#" i18n:translate=""
                tal:attributes="href view/url">
                <span tal:replace="view/subject" />
              </a>
            </span>
          </h2>
        </div>
        <form id="message-reply" name="listen-reply-form" action="."
          method="post" tal:attributes="action request/ACTUAL_URL">
          <input type="hidden" name="referring_url" value="."
            tal:attributes="value view/referring_url"/>
          <div>
            <label for="mail_from" i18n:translate="label_from">From:</label>
            <span tal:replace="view/member_address">test@example.com</span>
          </div>
          <div tal:define="error errors/subject|nothing">
            <label for="subject"
              i18n:translate="label_subject">Subject:</label>
            <input type="text" name="subject" value="." size="40" tal:attributes="value view/reply_subject; class python:error and ' oc-fieldBlock-error' or ''" />
            <span title="Required" class="oc-discreetText" i18n:domain="plone"
              i18n:translate="label_required" i18n:attributes="title title_required;">
              (Required)
            </span>
            <div tal:condition="error" tal:content="error" i18n:translate="" class="oc-form-error" />
          </div>
          <div tal:define="error errors/body|nothing"
            tal:attributes="class python:'oc-fieldBock' + (error and 'error' or '')">
            <label for="body" i18n:translate="label_reply_body">Reply</label>
            <span title="Required"  class="oc-discreetText" i18n:domain="plone"
              i18n:translate="label_required" i18n:attributes="title title_required;">
              (Required)
            </span>
            <div tal:condition="error" tal:content="error" i18n:translate="" class="oc-form-error" />
            <div>
              <textarea rows="25" cols="80" name="body" value="." tal:content="view/reply_body" tal:attributes="class python:error and ' oc-fieldBlock-error' or ''" />
            </div>
          </div>
          <div>
            <input type="submit" name="submit" value="Send" i18n:attributes="value label_send" />
            <input type="submit" name="cancel" value="Cancel" i18n:attributes="value label_cancel;"/>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
