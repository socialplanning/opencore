<html metal:use-macro="here/@@standard_macros/master">
  <head>
    <title metal:fill-slot="title" tal:content="string:${view/context/Title} - ${view/area/Title}" />
  </head>
  <body>
    <div metal:fill-slot="content">
      <div metal:use-macro="here/@@listen_macros/bcrumb"/>
      <div metal:use-macro="here/@@listen_macros/tabs"/>
      <div id="oc-content-main" i18n:domain="listen"
        tal:define="messages view/getMessageList;
                    template_id string:by_date;">
        <div class="oc-headingBlock">
          <h2 i18n:translate="" tal:content="view/Title" />
          <div class="oc-headingContext oc-smallText">View by <a i18n:translate="" href="../forum_view">conversation</a> or <strong>date</strong> (<strong>flat</strong> or <a id="switch_view" href="by_thread" i18n:translate="">threaded</a>)</div>
        </div>

          <ul id="message-list" class="oc-plainList">
            <li tal:repeat="message messages">
              <a href="." tal:attributes="href message/url;"
                 ><strong tal:content="message/subject" i18n:translate="">Re: Subj</strong></a>
              <span class="oc-discreetText">
                from <a href="."
                   tal:omit-tag="not:message/from_id"
                   tal:attributes="href string:${here/portal_url}/people/${message/from_id}/profile"
                     ><span tal:replace="message/mail_from">test@example.com</span
                   ></a>
                on <span tal:replace="message/date">Tue, 16 Nov 2005</span>
              </span>
            </li>
          </ul>

          <p tal:condition="not: messages"
             i18n:translate="description_no_posts">
            There are currently no posts in this archive.
          </p>
      </div><!-- content-main -->
      <div id="oc-content-sidebar">
        <div metal:use-macro="here/@@listen_macros/about"/>
      </div><!-- content-sidebar -->
    </div><!-- content-container -->
  </body>
</html>
