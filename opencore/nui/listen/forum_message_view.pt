<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en" i18n:domain="plone"
      metal:use-macro="here/@@standard_macros/master" tal:define="ml view/getMailingList">
  <body>
    <div metal:fill-slot="content">
      <div id="oc-content-main" i18n:domain="listen" tal:define="messages view/getMessageBodies;">
        <h1 i18n:translate="" tal:content="messages/subject"/>
        <div metal:use-macro="here/@@listen_macros/tabs"/>
        <a id="to_threaded" href="." tal:attributes="href view/archiveURL"
          i18n:translate="">Back to topic listing</a>
        <ul id="forum-thread"
          tal:define="message messages">
          <li id="initial-message">
            <metal:message use-macro="here/message_macros/macros/message"/>

            <!-- A form for changing the thread layout, uses post and lets the view set a cookie -->
            <form id="forum-control-form" name="forum-controls" method="post" action=""
              tal:attributes="action request/ACTUAL_URL">
              <label for="flat_view" i18n:translate="">Thread view:</label>
              <select id="threading" name="flat_view:int" tal:define="value view/flat|nothing">
                <option value="0" tal:attributes="selected not:value"
                  i18n:translate="option_forum_threaded">Threaded</option>
                <option value="1" tal:attributes="selected value"
                  i18n:translate="option_forum_flat">Flat</option>
              </select>
              <label for="newest_first" i18n:translate="">Thread order:</label>
              <select id="order" name="newest_first:int" tal:define="value view/newest_first|nothing">
                <option value="0" tal:attributes="selected not:value"
                  i18n:translate="option_forum_oldest_first">Oldest first</option>
                <option value="1" tal:attributes="selected value"
                  i18n:translate="option_forum_recent_first">Recent First</option>
              </select>
              <input name="forum-update" i18n:attributes="value" value="update"
                type="submit"/>
            </form>
            <dl id="reply-structure"
              tal:condition="local_thread"
              tal:define="thread view/getReplyStructure;
              local_thread thread/children;
              use_id_anchors python:True">
              <dt i18n:translate="label_threaded_replies">Thread Outline:</dt>
              <dd> 
                <div metal:use-macro="here/message_macros/macros/thread" />
              </dd>
            </dl>
          </li>
          <metal:threadmacro use-macro="here/message_macros/macros/forum_thread"/>
        </ul>
      </div>
    </div>
  </body>
</html>
