<html metal:use-macro="here/@@standard_macros/master">
  <head>
    <title metal:fill-slot="title" tal:content="string:${view/context/Title} - ${view/area/Title}" />
  </head>
  <body>
    <div metal:fill-slot="content">
      <div metal:use-macro="here/@@listen_macros/bcrumb"/>
      <div metal:use-macro="here/@@listen_macros/tabs"/>
      <div id="oc-content-main">
        <div tal:define="errors view/errors | nothing" i18n:domain="listen">


          <div class="oc-headingBlock">
            <h2 i18n:translate="new_topic">
              New post to &ldquo;<span tal:replace="context/Title" />&rdquo;
            </h2>
          </div>
          <form id="new-message"
                name="listen-post-form"
                action="."
                method="post"
                tal:attributes="action request/ACTUAL_URL">

            <input type="hidden"
                   name="referring_url"
                   value="."
                   tal:attributes="value view/referring_url"/>

            <div>
              <label for="mail_from" i18n:translate="label_from">From:</label>
              <span tal:replace="view/member_address">test@example.com</span>
            </div>
            <div tal:define="error errors/subject | nothing">
              <label for="subject"
                     i18n:translate="label_subject">Subject:</label>
              <input type="text"
                       name="subject"
                       value="."
                       size="40"
                       tal:attributes="value request/subject|nothing;
                                       class python:error and ' oc-fieldBlock-error' or ''" />
              <span title="Required" class="oc-discreetText" i18n:domain="plone"
                    i18n:translate="label_required"
                    i18n:attributes="title title_required;">
                (Required)
              </span>
              <div tal:condition="error" tal:content="error"
                   i18n:translate="" class="oc-form-error" />
            </div>
            <div tal:define="error errors/body | nothing">
              <label for="body"
                     i18n:translate="label_message_body">Message:</label>
              <span title="Required" class="oc-discreetText"
                    i18n:domain="plone"
                    i18n:translate="label_required"
                    i18n:attributes="title title_required;">
                (Required)
              </span>
              <div tal:condition="error" tal:content="error"
                   i18n:translate="" class="oc-form-error" />
              <div>
                <textarea rows="25"
                          cols="80"
                          name="body"
                          value="."
                          tal:content="request/body|nothing"
                          tal:attributes="class python:error and ' oc-fieldBlock-error' or ''" />
              </div>
            </div>
            <div>
              <input type="submit"
                     name="submit"
                     value="Send"
                     i18n:attributes="value label_send" />
              <input type="submit" name="cancel"
                     value="Cancel"
                     i18n:attributes="value label_cancel;"/>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
